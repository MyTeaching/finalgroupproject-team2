<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C7D0D8"
    android:padding="24dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B1BCC5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_trainer_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/roundstyle"

                android:backgroundTint="#FF5757"
                android:padding="40dp"
                android:shadowColor="#5F56BF"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1.6"
                android:text="Trainer Bag"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#28FF0D" />

            <Button
                android:id="@+id/btn_draw_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FF5757"
                android:padding="40dp"
                android:shadowColor="#5F56BF"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1.6"
                android:text="Draw Cards"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#28FF0D" />

            <Button
                android:id="@+id/btn_pokedex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#FF5757"
                android:padding="40dp"
                android:shadowColor="#5F56BF"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1.6"
                android:text="Pokedex"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#28FF0D" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>