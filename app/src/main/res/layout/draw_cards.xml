<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mudskip_pond">

    <ImageView
        android:id="@+id/cardId"
        android:layout_width="108dp"
        android:layout_height="177dp"
        android:layout_marginBottom="190dp"
        android:layout_marginStart="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokemon_card_back"
        tools:ignore="ContentDescription,MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/drawCardId"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/draw_cards_img"
            android:elevation="30dp"
            android:outlineSpotShadowColor="@color/black"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/returnButtonId"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="133dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="133dp"
            android:shadowColor="#D574FF"
            android:shadowRadius="5"
            android:text="@string/returnString"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>